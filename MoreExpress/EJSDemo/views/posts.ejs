<% include partials/header %>

<h1>The Posts Page</h1>
<h2>for Loop METHOD</h2>
<% for(var i = 0; i < posts.length; i++){ %>
  <li>
      The Article <%= i+1 %>: title - "<%= posts[i].title %>", Author: <strong><%= posts[i].author  %></strong>;
  </li>
  <% } %> 
  <br>
  
  <h2>forEach METHOD</h2>
<% posts.forEach(function(i){ %>
    <li>
        <%= i.title %> - <strong><%= i.author %></strong>
    </li>
<% }); %>

