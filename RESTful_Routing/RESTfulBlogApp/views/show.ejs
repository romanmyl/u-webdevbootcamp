<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= showBlog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= showBlog.image %>">
            <div class="content">
                <span><%= showBlog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- showBlog.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= showBlog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= showBlog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
    
<% include ./partials/footer %>